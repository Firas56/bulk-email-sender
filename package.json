{
  "name": "bulk-email-sender",
  "version": "1.0.0",
  "description": "A full-stack web application for managing and sending bulk emails with campaign management, recipient management, and email templates.",
  "main": "index.js",
  "scripts": {
    "install:backend": "cd Backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "start:backend": "cd Backend && npm start",
    "start:frontend": "cd frontend && ng serve",
    "build:frontend": "cd frontend && ng build --configuration production",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "setup": "npm run install:all && echo 'Setup complete! Please configure your .env file in the Backend directory.'"
  },
  "keywords": [
    "email",
    "bulk-email",
    "campaign",
    "marketing",
    "angular",
    "nodejs",
    "express",
    "mysql",
    "typescript"
  ],
  "author": "Bulk Email Sender Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bulk-email-sender.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bulk-email-sender/issues"
  },
  "homepage": "https://github.com/yourusername/bulk-email-sender#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
